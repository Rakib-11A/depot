<div class="w-full">
  <%=  render 'notice' %>

  <h1 class="font-bold text-xl mb-6 pb-2 border-b border-grey-200">
<!--    Your Pragmatic Catalog-->
    <%= t('.title_html') %>
  </h1>

  <%= turbo_stream_from 'products' %>
  <ul>
    <% cache ['product', I18n.locale] do %>
      <% @products.each do |product| %>
        <% cache [product, I18n.locale] do %>
          <%= render partial: 'product', object: product %>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>